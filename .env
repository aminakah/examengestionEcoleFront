# Configuration API - Backend Laravel
REACT_APP_API_URL=http://localhost:8000/api

# Configuration de l'environnement
REACT_APP_ENV=development

# Configuration des timeouts (en millisecondes)
REACT_APP_API_TIMEOUT=10000
REACT_APP_AUTH_TIMEOUT=30000

# Configuration des features
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true

# Configuration des uploads
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Configuration des permissions
REACT_APP_ROLE_ADMIN=admin
REACT_APP_ROLE_TEACHER=enseignant
REACT_APP_ROLE_PARENT=parent
REACT_APP_ROLE_STUDENT=eleve

# Configuration de l'interface
REACT_APP_THEME=default
REACT_APP_LANGUAGE=fr
REACT_APP_ITEMS_PER_PAGE=10

# Configuration de sécurité
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_AUTO_LOGOUT=true

# Configuration des notifications
REACT_APP_TOAST_DURATION=3000
REACT_APP_TOAST_POSITION=top-right
